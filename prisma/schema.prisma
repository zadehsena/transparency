datasource db {
  provider = "sqlite" // you can change to "postgresql" or "mysql" later
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  password      String
  createdAt     DateTime       @default(now())
  applications  Application[]
}

model Job {
  id            String         @id @default(cuid())
  title         String
  company       String
  location      String
  source        String?
  url           String?
  ats           String?
  postedAt      DateTime       @default(now())
  applications  Application[]
}

model Application {
  id        String             @id @default(cuid())
  userId    String
  jobId     String
  status    ApplicationStatus  @default(applied)
  createdAt DateTime           @default(now())

  user User @relation(fields: [userId], references: [id])
  job  Job  @relation(fields: [jobId], references: [id])
}

enum ApplicationStatus {
  applied
  interview
  offer
  rejected
}
