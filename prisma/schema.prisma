// 1️⃣ Datasource — tells Prisma what DB to use
datasource db {
  provider = "sqlite" // you can change to "postgresql" or "mysql" later
  url      = "file:./dev.db"
}

// 2️⃣ Generator — tells Prisma to generate the client
generator client {
  provider = "prisma-client-js"
}

// 3️⃣ Models — User, Job, Application
model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  password      String
  createdAt     DateTime       @default(now())
  applications  Application[]
}

model Job {
  id            String         @id @default(cuid())
  title         String
  company       String
  location      String
  source        String?
  url           String?
  ats           String?
  postedAt      DateTime       @default(now())
  applications  Application[]
}

model Application {
  id        String   @id @default(cuid())
  jobId     String
  userId    String
  status    String   @default("applied")
  appliedAt DateTime @default(now())

  job  Job  @relation(fields: [jobId], references: [id])
  user User @relation(fields: [userId], references: [id])
}
